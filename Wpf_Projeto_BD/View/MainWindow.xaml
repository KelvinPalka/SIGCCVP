<Window x:Class="Wpf_Projeto_BD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Sistema de Gerenciamento"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABEÇALHO -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Painel de Controle"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       DockPanel.Dock="Left"/>
            <Button Content="Logout"
                    DockPanel.Dock="Right"
                    Background="#E53935"
                    Foreground="White"
                    Padding="10,5"
                    Click="BtnLogout_Click" Width="100" RenderTransformOrigin="0.508,0.475"/>
        </DockPanel>

        <!-- INDICADORES (CARDS) -->
        <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="0,0,0,20"
                     HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border Background="White" CornerRadius="10" Margin="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="📦 Estoque Atual" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtEstoque"
                               Text="120 itens disponíveis"
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="#2E7D32"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Margin="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="📑 Pedidos em Aberto" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtPedidos"
                               Text="15 pedidos"
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="#1565C0"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Margin="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="🛠 Produção (Prazos próximos)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtProducao"
                               Text="3 ordens com prazo em 2 dias"
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="#F57C00"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Margin="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="💰 Vendas (Mês)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtVendas"
                               Text="R$ 12.450,00"
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="#4CAF50"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- ATALHOS (MENU RÁPIDO) -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="📦 Estoque" Width="150" Height="40"
                    Background="#1976D2" Foreground="White" FontWeight="Bold"
                    Margin="10"
                    Click="BtnEstoque_Click"/>
            <Button Content="📑 Pedidos" Width="150" Height="40"
                    Background="#0288D1" Foreground="White" FontWeight="Bold"
                    Margin="10"
                    Click="BtnPedidos_Click"/>
            <Button Content="🛠 Produção" Width="150" Height="40"
                    Background="#F57C00" Foreground="White" FontWeight="Bold"
                    Margin="10"
                    Click="BtnProducao_Click"/>
            <Button Content="💰 Vendas" Width="150" Height="40"
                    Background="#388E3C" Foreground="White" FontWeight="Bold"
                    Margin="10"
                    Click="BtnVendas_Click"/>
        </StackPanel>
    </Grid>
</Window>