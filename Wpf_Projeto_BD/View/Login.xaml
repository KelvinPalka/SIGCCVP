<Window x:Class="Wpf_Projeto_BD.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Projeto_BD.View"
        mc:Ignorable="d"
        Title="Login"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Acesse o Sistema"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,20"
                   Grid.Row="0"/>

        <!-- Área Inputs -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">

            <TextBlock Text="Usuário:" 
                       FontWeight="SemiBold" 
                       Foreground="#444"/>
            <TextBox x:Name="txtUsuario"
                     Height="30"
                     FontSize="14"
                     Margin="0,0,0,20"
                     Padding="5"/>

            <TextBlock Text="Senha:" 
                       FontWeight="SemiBold" 
                       Foreground="#444"/>
            <PasswordBox x:Name="txtSenha"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,20"
                         Padding="5"/>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,20">
            <Button Content="Entrar"
                    Width="120" Height="40"
                    Margin="0,0,15,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnEntrar_Click"/>

            <Button Content="Cancelar"
                    Width="120" Height="40"
                    Background="#E53935"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>