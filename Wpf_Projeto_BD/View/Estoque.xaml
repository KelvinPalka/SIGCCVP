<Window x:Class="Wpf_Projeto_BD.View.EstoqueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Módulo de Estoque"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Estoque - Itens e Movimentações"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333"
                       DockPanel.Dock="Left"/>
            <Button Content="Fechar"
                    DockPanel.Dock="Right"
                    Background="#E53935"
                    Foreground="White"
                    Padding="10,5"
                    Click="BtnFechar_Click"/>
        </DockPanel>

        <!-- Conteúdo com abas -->
        <TabControl Grid.Row="1">
            <!-- Aba 1: Itens -->
            <TabItem Header="Itens Cadastrados">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Grid de itens -->
                    <DataGrid x:Name="dgItens"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              Margin="0,0,0,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                            <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="120"/>
                            <DataGridTextColumn Header="Cor" Binding="{Binding Cor}" Width="100"/>
                            <DataGridTextColumn Header="Tamanho" Binding="{Binding Tamanho}" Width="100"/>
                            <DataGridTextColumn Header="Qtd. Atual" Binding="{Binding Quantidade}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Botões de ação -->
                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Adicionar Item"
                                Margin="5"
                                Padding="10,5"
                                Width="130"
                                Background="#388E3C"
                                Foreground="White"
                                Click="BtnAdicionar_Click"/>
                        <Button Content="Editar"
                                Margin="5"
                                Padding="10,5"
                                Width="100"
                                Background="#1976D2"
                                Foreground="White"
                                Click="BtnEditar_Click"/>
                        <Button Content="Remover"
                                Margin="5"
                                Padding="10,5"
                                Width="100"
                                Background="#D32F2F"
                                Foreground="White"
                                Click="BtnRemover_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Aba 2: Movimentações -->
            <TabItem Header="Movimentações (Entradas/Saídas)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgMovimentacoes"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              Margin="0,0,0,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="150"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="*"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                            <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                            <DataGridTextColumn Header="Motivo" Binding="{Binding Motivo}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Registrar Entrada"
                                Margin="5"
                                Padding="10,5"
                                Width="150"
                                Background="#2E7D32"
                                Foreground="White"
                                Click="BtnEntrada_Click"/>
                        <Button Content="Registrar Saída"
                                Margin="5"
                                Padding="10,5"
                                Width="150"
                                Background="#F57C00"
                                Foreground="White"
                                Click="BtnSaida_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Rodapé: Avisos -->
        <TextBlock x:Name="txtAlerta" 
                   Grid.Row="2"
                   Text=""
                   Foreground="Red"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>